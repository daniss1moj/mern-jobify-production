{
	"name": "jobster",
	"version": "1.0.0",
	"description": "Project in Action - [Jobify](https://www.jobify.live/)",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"setup-production": "npm run install-client && npm run build-client && npm install && npm run build server",
		"install-client": "cd client && npm install",
		"build-client": "cd client && npm run build",
		"server": "npm run build-server && nodemon server --ignore client",
		"client": "npm start --prefix client",
		"build-server": "npx tsc",
		"start": "concurrently --kill-others-on-fail \" npm run server\" \" npm run client\""
	},
